<% @categories.each do |category| %>
  
    <h4><%= category.title %></h4>
    <span>Постов в категории: <%= category.posts.count %></span>
    <cite><%= link_to 'Просмотреть категорию', admin_category_path(category), class: "btn btn-link" %></br>
    <% if current_user && current_user.admin? %>
      <span>
        <%= link_to "Редактировать", edit_admin_category_path(category), class: "btn btn-link" %> |
        <%= link_to "Удалить", admin_category_path(category), method: "delete", data: { confirm: "Вы уверены, что хотите удалить эту категорию?" }, class: "btn btn-link" %>
      </span>
    <% end %>
    </cite>
    <hr>
<% end %>