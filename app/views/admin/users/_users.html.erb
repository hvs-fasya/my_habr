<% @users.each do |user| %>
  <div class="well">
    <strong><cite><%= link_to user.email, admin_user_path(user), class: "btn btn-link" %></br>
      <%= link_to 'Смотреть профиль пользователя - нерабочая ссылка', 'user_profile_path', class: "btn btn-link disabled" %></cite></strong></br>
    <% if current_user && current_user.admin? %>
      <span>
        <%= link_to "Редактировать", edit_admin_user_path(user), class: "btn btn-link" %> |
        <%= link_to "Удалить", admin_user_path(user), method: "delete", data: { confirm: "Вы уверены, что хотите удалить этого пользователя?" }, class: "btn btn-link" %>
      </span>
    <% end %>
  </div>
    <hr>
<% end %>