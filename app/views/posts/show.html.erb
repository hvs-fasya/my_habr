<p>
  <strong><h4><%= @post.title %></h4></strong>
  
</p>
<hr>
<%= render "publish_control_group", post: @post %>

<p>
  <strong>By: </strong>
  <span><%= @post.user.email %></span>
</p>

<p>
	<strong>Категории:</strong>
	<em><%= @post.categories.map{|el| el.title }.join(", ") %></em>
</p>

<p>
	<ul class="list-inline">
		<li><strong>Tags:</strong></li>
		<% @post.tags.each do |tag| %>
			<li class="btn btn-default btn-xs">#<%= tag.name %></li>
		<% end %>
	</ul>
</p>


<div class="well">
  <%= raw @post.body %>
</div>

<%= render "comments/form", comment: @comment = Comment.new %>
<%= render "comments/comments" %>

<hr>

<%= link_to_admin_and_owner @post.user, 'Редактировать пост', edit_post_path(@post), class: "btn btn-link" %>
<%= link_to_admin_and_owner @post.user, 'Удалить пост', post_path(@post), method: "delete", data: { confirm: "Вы уверены, что хотите удалить этот пост?" },  class: "btn btn-link" %>

<%= link_to 'Назад к списку постов', posts_path, class: "btn btn-link" %>
<hr>
