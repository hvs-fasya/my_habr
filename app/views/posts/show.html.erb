<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>Author:</strong>
  <%= @post.user.login %>
</p>

<p>
	<strong>Tags:</strong>
	<ul>
		<% @post.tags.each do |tag| %>
			<li><%= tag.name %></li>
		<% end %>
	</ul>
</p>

<p>
	<strong>Comments:</strong>
	<ul>
		<span>------</span>
		<% @post.comments.each do |c| %>
			<li><%= c.body %><br>
			<span>------</span></li>
		<% end %>
	</ul>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back to Posts', posts_path %>
